<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.LoginRegisterActivity">

        <ImageView
            android:layout_width="@dimen/sw_233dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sw_31dp"
            android:src="@mipmap/ic_login_register_top_bg"
            app:layout_constraintDimensionRatio="467:569"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mBackImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/sw_23dp"
            android:paddingTop="@dimen/sw_11dp"
            android:paddingEnd="@dimen/sw_11dp"
            android:paddingBottom="@dimen/sw_11dp"
            android:src="@mipmap/ic_black_back_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/mTitleNameTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mTitleNameTextView" />

        <TextView
            android:id="@+id/mTitleNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_32dp"
            android:text="@string/register_title"
            android:textColor="#ff2d2d2d"
            android:textSize="@dimen/sw_15sp"
            app:layout_constraintLeft_toRightOf="@+id/mBackImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ruffian.library.widget.RImageView
            android:id="@+id/mAppIconImageView"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            android:layout_marginStart="@dimen/sw_23dp"
            android:layout_marginTop="@dimen/sw_31dp"
            android:src="@mipmap/ic_launcher"
            app:corner_radius="@dimen/sw_9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mBackImageView" />

        <TextView
            android:id="@+id/mAppNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_17dp"
            android:text="App_name loan"
            android:textColor="#ff2d2d2d"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/mAppIconImageView"
            app:layout_constraintLeft_toRightOf="@+id/mAppIconImageView"
            app:layout_constraintTop_toTopOf="@+id/mAppIconImageView" />

        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/mInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_15dp"
            android:layout_marginTop="@dimen/sw_29dp"
            android:layout_marginEnd="@dimen/sw_15dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/sw_24dp"
            android:paddingTop="@dimen/sw_33dp"
            android:paddingEnd="@dimen/sw_24dp"
            android:paddingBottom="@dimen/sw_47dp"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/sw_8dp"
            app:layout_constraintTop_toBottomOf="@+id/mAppIconImageView"
            app:shadow_color="#80bdbbbb"
            app:shadow_dx="@dimen/sw_0dp"
            app:shadow_dy="@dimen/sw_0dp"
            app:shadow_radius="@dimen/sw_8dp">

            <TextView
                android:id="@+id/mLoginTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicie el proceso,valida tu celular"
                android:textColor="#ff2d2d2d"
                android:textSize="@dimen/sw_17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_phone" />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/sw_14dp"
                    android:layout_marginStart="@dimen/sw_7dp"
                    android:layout_marginEnd="@dimen/sw_7dp"
                    android:background="#C4C2C3" />

                <com.macro.online.lemoncash.mio.brubank.creditos.personalpay.uala.prestamo.galicia.ui.weight.ClearEditText
                    android:id="@+id/mPhoneEditTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/sw_25dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="Por favor completa con tu número de celular"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#2D2D2D"
                    android:textColorHint="#ffc4c2c3"
                    android:textSize="@dimen/sw_13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_1dp"
                android:layout_marginTop="@dimen/sw_8dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_code" />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/sw_14dp"
                    android:layout_marginStart="@dimen/sw_7dp"
                    android:layout_marginEnd="@dimen/sw_7dp"
                    android:background="#C4C2C3" />

                <com.macro.online.lemoncash.mio.brubank.creditos.personalpay.uala.prestamo.galicia.ui.weight.ClearEditText
                    android:id="@+id/mVerCodeEditTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/sw_25dp"
                    android:background="@color/white"
                    android:hint="por favor ingrese el código de verificación"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="#2D2D2D"
                    android:textColorHint="#ffc4c2c3"
                    android:textSize="@dimen/sw_13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_1dp"
                android:layout_marginTop="@dimen/sw_8dp"
                android:background="#DFDFDF" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mGetVerCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/sw_21dp"
                android:paddingStart="@dimen/sw_11dp"
                android:paddingTop="@dimen/sw_6dp"
                android:paddingEnd="@dimen/sw_11dp"
                android:paddingBottom="@dimen/sw_6dp"
                android:text="Volver a adquirir"
                android:textColor="#ffc4c2c3"
                android:textSize="@dimen/sw_13sp"
                app:border_color_normal="#ABABAB"
                app:border_color_selected="#FE9647"
                app:border_width_normal="1px"
                app:corner_radius="@dimen/sw_4dp" />
        </com.ruffian.library.widget.RLinearLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/mLoginTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_23dp"
            android:layout_marginTop="@dimen/sw_58dp"
            android:layout_marginEnd="@dimen/sw_23dp"
            android:gravity="center"
            android:paddingTop="@dimen/sw_14dp"
            android:paddingBottom="@dimen/sw_14dp"
            android:text="ACEPTO Y CONTINUAR"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sw_15sp"
            app:background_normal="#80F98D4F"
            app:background_selected="#F98D4F"
            app:corner_radius="@dimen/sw_50dp"
            app:layout_constraintTop_toBottomOf="@+id/mInputLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_47dp"
            android:text="Protección SSL de 256 bits segura"
            android:textColor="#ffc4c2c3"
            android:textSize="@dimen/sw_13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mLoginTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>