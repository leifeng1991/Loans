<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.activity.PersonalInformationActivity">

            <TextView
                android:id="@+id/mPiTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_55dp"
                android:text="Información\npersonal"
                android:textColor="#ff5a5a5a"
                android:textSize="@dimen/sw_19sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mPiCardImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_27dp"
                android:layout_marginTop="@dimen/sw_28dp"
                android:src="@mipmap/ic_pi_card"
                app:layout_constraintLeft_toRightOf="@+id/mPiTitleTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mNomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_39dp"
                android:text="Nombres"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mPiCardImageView" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mNomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:hint="Por favor elige"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mNomTextView" />

            <TextView
                android:id="@+id/mApeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Apellidos"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mNomEditText" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mApeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:hint="Introducir texto"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mApeTextView"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/mGeneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Género"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mApeEditText" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mGeneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:drawableEnd="@mipmap/ic_right_arrow"
                android:hint="Por favor elige"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mGeneTextView" />

            <TextView
                android:id="@+id/mFecTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Fecha de nacimiento"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mGeneEditText" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mFecEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:drawableEnd="@mipmap/ic_right_arrow"
                android:hint="Por favor elige"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mFecTextView" />

            <TextView
                android:id="@+id/mCorrTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Correo electrónico"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mFecEditText" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mCorrEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:hint="Introducir texto"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mCorrTextView" />

            <TextView
                android:id="@+id/mDirecResTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Dirección residencial"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mCorrEditText" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mDirecResEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:drawableEnd="@mipmap/ic_right_arrow"
                android:hint="Por favor elige"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mDirecResTextView" />

            <TextView
                android:id="@+id/mDireTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Dirección"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mDirecResEditText" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mDireEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:hint="Introducir texto"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mDireTextView" />

            <TextView
                android:id="@+id/mNumDeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_15dp"
                android:text="Número de DNI"
                android:textColor="#ff5b5b5b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mDireEditText" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/mNumDeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginTop="@dimen/sw_11dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:background="@color/white"
                android:hint="Introducir texto"
                android:inputType="number"
                android:paddingStart="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_12dp"
                android:paddingEnd="@dimen/sw_15dp"
                android:paddingBottom="@dimen/sw_12dp"
                android:textColor="#ff31394d"
                android:textColorHint="#ff979797"
                android:textSize="@dimen/sw_16sp"
                app:border_color_normal="#C0C2CA"
                app:border_width_normal="1px"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/mNumDeTextView" />

            <Space
                android:id="@+id/mSpace"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_20dp"
                app:layout_constraintTop_toBottomOf="@+id/mNumDeEditText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#F4F4F4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mBottomContentTextView" />

            <TextView
                android:id="@+id/mBottomContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_15dp"
                android:layout_marginEnd="@dimen/sw_15dp"
                android:paddingTop="@dimen/sw_16dp"
                android:text="*Todos los datos que proporciones serán tratados correctamente y nunca se revelará su información del perfil"
                android:textColor="#ff6b6b6b"
                android:textSize="@dimen/sw_14sp"
                app:layout_constraintTop_toBottomOf="@+id/mSpace" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mGigTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sw_23dp"
                android:layout_marginTop="@dimen/sw_95dp"
                android:layout_marginEnd="@dimen/sw_23dp"
                android:layout_marginBottom="@dimen/sw_41dp"
                android:gravity="center"
                android:paddingTop="@dimen/sw_14dp"
                android:paddingBottom="@dimen/sw_14dp"
                android:text="Siguiente"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sw_15sp"
                app:background_normal="#80F98D4F"
                app:background_selected="#F98D4F"
                app:corner_radius="@dimen/sw_50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mBottomContentTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
