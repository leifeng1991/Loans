<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        tools:context=".ui.activity.SettingActivity">

        <TextView
            android:id="@+id/mSettingTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_15dp"
            android:layout_marginTop="@dimen/sw_10dp"
            android:text="Cambiar idioma"
            android:textColor="#ff333333"
            android:textSize="@dimen/sw_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sw_15dp"
            android:layout_marginTop="@dimen/sw_9dp"
            android:layout_marginEnd="@dimen/sw_15dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/sw_15dp"
            android:paddingEnd="@dimen/sw_15dp"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/sw_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mSettingTitleTextView">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mEnglishTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sw_16dp"
                android:paddingBottom="@dimen/sw_16dp"
                android:text="English"
                android:textColor="#ff333333"
                android:textSize="@dimen/sw_14sp"
                app:icon_normal_right="@null"
                app:icon_selected_right="@mipmap/ic_setting_gray_checked" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#EAEAEA" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/mEspTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sw_16dp"
                android:paddingBottom="@dimen/sw_16dp"
                android:text="EspaÃ±o"
                android:textColor="#ff333333"
                android:textSize="@dimen/sw_14sp"
                app:icon_normal_right="@null"
                app:icon_selected_right="@mipmap/ic_setting_gray_checked" />
        </com.ruffian.library.widget.RLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>